<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Regression Suite 1">
    <listeners>
        <listener
                class-name="qa.automation.listener.TestListener" />
    </listeners>
    <test name="Ui-testing">
        <groups>
            <run>
                <exclude name="SM"></exclude>
                <exclude name="sm"></exclude>
                <exclude name="androidOnly"></exclude>
            </run>
        </groups>
        <classes>
            <class name="qa.automation.testCase.mobile.DrawerTestCases"/>
            <class name="qa.automation.testCase.mobile.FavoritesPageTestCases"/>
            <class name="qa.automation.testCase.mobile.HeaderTestCases"/>

            <class name="qa.automation.testCase.mobile.HideVariantOptionsTestCases"/>
            <class name="qa.automation.testCase.mobile.HomePageTestCases"/>
            <class name="qa.automation.testCase.mobile.LoginTestCases"/>

            <class name="qa.automation.testCase.mobile.MenuLayoutsTestCases"/>
            <class name="qa.automation.testCase.mobile.MorePageTestCases"/>
            <class name="qa.automation.testCase.mobile.MultiLanguageTestCases"/>
        </classes>
    </test>
</suite>